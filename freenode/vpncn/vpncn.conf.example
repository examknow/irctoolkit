hostname: chat.freenode.net
nickname: vpncn

channels:
  # set ##reports to have no actions
  - '##reports': []
  # use default actions for ##mychannel
  - '##mychannel'


host-patterns: [
    # match @[...]/ip.[...]
    ['^.+/ip\.(?P<ip>[^/]+)$', '*!*@*/ip.{IP}'],
    # match non-cloak
    ['^(?P<ip>[^/]+)$',        '*!*@{IP}']
]

act-sets:
  report:
    - [False, 'NOTICE ##reports :caught {NICK}!{USER}@{HOST} in {CHAN} for {REASON}']
  quiet:
    - [True,  'MODE {CHAN} +q {MASK}']
  ban:
    - [True,  'MODE {CHAN} +b {MASK}']
  kick:
    - [True,  'KICK {CHAN} {NICK}']

act-default: [quiet, report]

admins:
  - '*@myproject/*'
sasl:
  username: vpncn
  password: hunter2

cert-patterns:
  test-vpn-1:
    name: "Test VPN 1"
    find: ['scn:myvpn\.invalid']
  test-vpn-2:
    name: "Test VPN 2"
    find: ['icn:myvpn\.invalid']

bad:
  443:
    - test-vpn-1
  8443:
    - test-vpn-2
