hostname: chat.freenode.net
nickname: vpncn

channels:
  # set ##reports to have no actions
  - '##reports': []
  # use default actions for ##mychannel
  - '##mychannel'

patterns: {
    # match @[...]/ip.[...]
    '^.+/ip\.(?P<ip>[^/]+)#.*$':                    '*!*@*/ip.{IP}',
    # match #https://webchat.freenode.net
    '^(?P<ip>[^/]+)#https://webchat.freenode.net$': '*!*@{IP}'
}

act-sets:
  report:
    - [False, 'NOTICE ##reports :caught {NICK}!{USER}@{HOST} in {CHAN} for {REASON}']
  quiet:
    - [True,  'MODE {CHAN} +q {MASK}']
  ban:
    - [True,  'MODE {CHAN} +b {MASK}']
  kick:
    - [True,  'KICK {CHAN} {NICK}']

act-default: [quiet, report]

admins:
  - '*@myproject/*'

sasl:
  username: vpncn
  password: hunter2

bad:
  443: {
    # check Subject Common Name
    'scn:myvpn\.invalid': 'Test VPN 1',
    # check Issuer Common Name
    'icn:myvpn\.invalid': 'Test VPN 2',
  }
